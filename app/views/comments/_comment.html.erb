<div class="comment_container">
<span class="comment_author">
  <%= render partial: 'users/user_profile_picture', locals: { user: comment.user, size: 30 } %>
  <%= link_to "#{comment.user.name}", comment.user %>
</span>

<span class="delete">
<%= link_to "x", post_comment_path(comment.post_id, comment.id), method: :delete, remote: true if current_user == comment.user %>
</span>

<div class="comment_body">
  <%= comment.content %>
  <div class="comment_time">
    <%= comment.created_at %>
  </div>
</div>
</div>
